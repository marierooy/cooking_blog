{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recette.ingredients }}</td>
            </tr>
            <tr>
                <th>Etapes</th>
                <td>{{ recette.etapes }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ recette.getUser().getEmail() }}</td>
            </tr>
            <tr>
                <th>Moyenne</th>
                <td>{{ total }}</td>
            </tr>
            <tr>
                <th>Nombre de notes</th>
                <td>{{ count }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('home') }}">back to list</a>

    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}

    <h2>Commentaires</h2>
    {% for comment in comments|reverse %}
    <p>{{ comment.getContent() }} par {{ comment.getUser().getEmail() }}</p>
    {% endfor %}
    <br>
    {% if app.user %}
        {{ include('comment/_form.html.twig') }}
    {% endif %}
    <br>
    <h2>Notes</h2>
    
    {% for note in notes|reverse %}
        <p>{{ note.getValue() }} par {{ note.getUser().getEmail() }}</p>
    {% endfor %}
    <br>
    {% if app.user %}
        {{ include('note/_form.html.twig') }}
    {% endif %}

{% endblock %}
